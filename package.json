{
  "name": "metaphysics",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "repository": "https://github.com/artsy/metaphysics",
  "engines": {
    "node": "8.4.x",
    "npm": "5.4.x",
    "yarn": "1.x"
  },
  "scripts": {
    "start": "yarn run dev",
    "verbose-dev": "DEBUG=verbose,info,error nf start --procfile Procfile.dev",
    "dev": "DEBUG=info,error nf start --procfile Procfile.dev -w",
    "staging": "DEBUG=info,error nf start --procfile Procfile.dev --env .env.staging",
    "test": "yarn run lint && jest",
    "watch": "jest --watch",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "promote": "heroku pipelines:promote -r staging",
    "dump-schema": "babel-node ./scripts/dump-schema.js",
    "heroku-postbuild":
      "babel index.js config.js -s inline -d build && babel lib -s inline -d build/lib && babel schema -s inline -d build/schema",
    "precommit": "lint-staged",
    "prettier-project": "prettier --write '**/*.js'",
    "type-check": "tsc --noEmit --pretty"
  },
  "author": "Art.sy Inc",
  "license": "MIT",
  "dependencies": {
    "accounting": "^0.4.1",
    "artsy-morgan": "git://github.com/artsy/artsy-morgan.git",
    "artsy-newrelic": "^1.3.0",
    "artsy-xapp": "^1.0.4",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.2.4",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.1.18",
    "basic-auth": "^1.0.3",
    "bluebird": "^3.3.4",
    "body-parser": "^1.15.2",
    "cors": "^2.7.1",
    "dataloader": "^1.3.0",
    "debug": "^2.2.0",
    "express": "^4.13.3",
    "express-force-ssl": "^0.3.0",
    "express-graphql": "^0.6.1",
    "forever": "^0.15.3",
    "graphiql": "^0.11.5",
    "graphql": "^0.11.7",
    "graphql-depth-limit": "^1.1.0",
    "graphql-relay": "0.5.3",
    "graphql-type-json": "^0.1.4",
    "i": "^0.3.5",
    "jwt-simple": "^0.5.0",
    "lodash": "^4.3.0",
    "marked": "^0.3.4",
    "memjs": "^0.10.0",
    "moment": "^2.14.1",
    "moment-timezone": "^0.5.5",
    "numeral": "^1.5.3",
    "qs": "^5.2.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "relay-cursor-paging": "^0.2.0",
    "request": "^2.67.0",
    "source-map-support": "^0.4.3"
  },
  "devDependencies": {
    "@types/graphql": "^0.8.2",
    "@types/jest": "^21",
    "@types/lodash": "^4.14.74",
    "@types/moment": "^2.13.0",
    "@types/node": "^8.0.31",
    "@types/qs": "^6.5.0",
    "@types/request": "^2.0.3",
    "babel-eslint": "^5.0.4",
    "babel-jest": "^16.0.0",
    "babel-plugin-rewire": "1.0.0-beta-2",
    "babel-watch": "^2.0.5",
    "deep-equal": "^1.0.1",
    "dotenv": "^2.0.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-react": "^3.14.0",
    "expect.js": "^0.3.1",
    "foreman": "^1.4.1",
    "husky": "^0.13.3",
    "jest": "^21",
    "lint-staged": "^3.4.0",
    "prettier": "^1.7",
    "sinon": "^1.17.2",
    "typescript": "^2.5.2"
  },
  "jest": {
    "testRegex": "/test/.*.js$",
    "setupTestFrameworkScriptFile": "<rootDir>/test/helper.js",
    "testPathIgnorePatterns": ["/node_modules/", "/test/helper.js", "/test/utils.js", "/test/gql.js", "/test/__mocks__"]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.json": ["yarn prettier --write", "git add"],
    "*.js": ["eslint --fix", "yarn prettier --write", "git add"]
  }
}
