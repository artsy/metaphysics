{
  "name": "metaphysics",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "repository": "https://github.com/artsy/metaphysics",
  "engines": {
    "node": "8.4.x",
    "npm": "5.4.x",
    "yarn": "1.x"
  },
  "scripts": {
    "start": "yarn run dev",
    "verbose-dev": "DEBUG=verbose,info,error nf start --procfile Procfile.dev",
    "dev": "DEBUG=info,error nf start --procfile Procfile.dev",
    "staging": "DEBUG=info,error nf start --procfile Procfile.dev --env .env.staging",
    "test": "yarn run lint && jest",
    "watch": "jest --watch",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "promote": "heroku pipelines:promote -r staging",
    "dump-schema": "babel-node ./scripts/dump-schema.js",
    "build:lib": "babel src --copy-files --ignore src/test,src/integration,src/**/__tests__ -s inline -d build/src",
    "build:index": "babel index.js -s inline -d build",
    "build:fixtures": "cp src/lib/*.json build/src/lib/",
    "heroku-postbuild": "yarn patch-package && yarn build:lib && yarn build:index && yarn build:fixtures",
    "precommit": "lint-staged",
    "prepare": "patch-package",
    "prettier-project": "prettier --write '**/*.js'",
    "type-check": "tsc --noEmit --pretty"
  },
  "author": "Art.sy Inc",
  "license": "MIT",
  "dependencies": {
    "accounting": "^0.4.1",
    "apollo-link": "^1.0.0",
    "apollo-link-context": "^1.0.0",
    "apollo-link-http": "^1.1.0",
    "artsy-morgan": "git://github.com/artsy/artsy-morgan.git",
    "artsy-newrelic": "^1.3.0",
    "artsy-xapp": "^1.0.4",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.2.4",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.1.18",
    "basic-auth": "^1.0.3",
    "bluebird": "^3.3.4",
    "body-parser": "^1.15.2",
    "cors": "^2.7.1",
    "datadog-tracer": "github:artsy/datadog-tracer-js#99c3f411cc19bb11729b56c699fd21d50f24507d",
    "dataloader": "^1.3.0",
    "debug": "^2.2.0",
    "express": "^4.13.3",
    "express-force-ssl": "^0.3.0",
    "express-graphql": "^0.6.1",
    "forever": "^0.15.3",
    "graphiql": "^0.11.5",
    "graphql": "^0.11.7",
    "graphql-depth-limit": "^1.1.0",
    "graphql-relay": "0.5.3",
    "graphql-tools": "^2.8.0",
    "graphql-type-json": "^0.1.4",
    "i": "^0.3.5",
    "jwt-simple": "^0.5.0",
    "lodash": "^4.3.0",
    "marked": "^0.3.9",
    "memjs": "^0.10.0",
    "moment": "^2.14.1",
    "moment-timezone": "^0.5.5",
    "node-fetch": "^1.7.3",
    "numeral": "^1.5.3",
    "opentracing": "^0.14.1",
    "patch-package": "^5.0.0",
    "performance-now": "^2.1.0",
    "postinstall-prepare": "^1.0.1",
    "qs": "^5.2.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "relay-cursor-paging": "^0.2.0",
    "request": "^2.67.0",
    "source-map-support": "^0.4.3",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@artsy/express-reloadable": "^1.2.0",
    "@types/express-graphql": "^0.0.35",
    "@types/graphql": "^0.8.2",
    "@types/jest": "^21",
    "@types/lodash": "^4.14.74",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.1",
    "@types/node": "^8.0.31",
    "@types/qs": "^6.5.0",
    "@types/request": "^2.0.3",
    "babel-eslint": "^5.0.4",
    "babel-jest": "^16.0.0",
    "babel-plugin-rewire": "1.0.0-beta-2",
    "deep-equal": "^1.0.1",
    "dotenv": "^2.0.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-react": "^3.14.0",
    "expect.js": "^0.3.1",
    "foreman": "^1.4.1",
    "husky": "^0.13.3",
    "jest": "^21",
    "lint-staged": "^3.4.0",
    "prettier": "^1.7",
    "sinon": "^1.17.2",
    "typescript": "^2.5.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/helper.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/src/test/helper.js",
      "/src/test/utils.js",
      "/src/test/gql.js",
      "/src/test/__mocks__"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.json, *.md": [
      "yarn prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "yarn prettier --write",
      "git add"
    ]
  }
}
