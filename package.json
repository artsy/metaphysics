{
  "name": "metaphysics",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "repository": "https://github.com/artsy/metaphysics",
  "engines": {
    "node": "8.4.0",
    "npm": "5.3.0",
    "yarn": "1.*"
  },
  "scripts": {
    "start": "yarn run dev",
    "verbose-dev": "DEBUG=verbose,info,error nf start --procfile Procfile.dev",
    "dev": "DEBUG=info,error nf start --procfile Procfile.dev -w",
    "test": "yarn run lint && jest",
    "watch": "jest --watch",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "dump-schema": "babel-node ./scripts/dump-schema.js",
    "dump-remote-schema": "babel-node ./scripts/dump-remote-schema.js",
    "build": "yarn build:lib && yarn build:index && yarn build:fixtures && yarn build:remote-schemas",
    "build:lib": "babel src --copy-files --extensions '.ts,.js' --ignore src/test,src/integration,src/**/__tests__ -s inline -d build/src",
    "build:index": "babel index.js -s inline -d build",
    "build:fixtures": "cp src/lib/*.json build/src/lib/",
    "build:remote-schemas": "cp src/data/*.graphql build/src/data/",
    "precommit": "lint-staged",
    "prepare": "patch-package",
    "prettier-project": "prettier --write '**/*.js'",
    "type-check": "tsc --noEmit --pretty"
  },
  "author": "Art.sy Inc",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "7.0.0-beta.41",
    "@babel/core": "7.0.0-beta.41",
    "@babel/node": "^7.0.0-beta.41",
    "@babel/preset-env": "7.0.0-beta.41",
    "@babel/preset-es2015": "7.0.0-beta.41",
    "@babel/preset-stage-3": "^7.0.0-beta.41",
    "@babel/preset-typescript": "7.0.0-beta.41",
    "@babel/register": "7.0.0-beta.41",
    "@heroku/foreman": "^2.0.2",
    "accounting": "^0.4.1",
    "apollo-link": "^1.0.0",
    "apollo-link-context": "^1.0.0",
    "apollo-link-http": "^1.1.0",
    "artsy-morgan": "git://github.com/artsy/artsy-morgan.git",
    "artsy-xapp": "^1.0.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-flow-strip-types": "7.0.0-beta.3",
    "basic-auth": "^1.0.3",
    "bluebird": "^3.3.4",
    "body-parser": "^1.15.2",
    "compression": "^1.7.2",
    "cors": "^2.7.1",
    "datadog-tracer": "github:artsy/datadog-tracer-js#99c3f411cc19bb11729b56c699fd21d50f24507d",
    "dataloader": "^1.3.0",
    "debug": "^2.2.0",
    "express": "^4.13.3",
    "express-force-ssl": "^0.3.0",
    "express-graphql": "^0.6.1",
    "graphiql": "^0.11.11",
    "graphql": "^0.13.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-relay": "^0.5.4",
    "graphql-tools": "^3.0.0-alpha.14",
    "graphql-type-json": "^0.1.4",
    "i": "^0.3.5",
    "jwt-simple": "^0.5.0",
    "lodash": "^4.3.0",
    "longjohn": "^0.2.12",
    "marked": "^0.3.9",
    "moment": "^2.14.1",
    "moment-timezone": "^0.5.5",
    "node-fetch": "^1.7.3",
    "numeral": "^1.5.3",
    "opentracing": "^0.14.1",
    "patch-package": "^5.0.0",
    "performance-now": "^2.1.0",
    "postinstall-prepare": "^1.0.1",
    "qs": "^5.2.0",
    "raven": "^2.4.2",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "redis": "^2.8.0",
    "relay-cursor-paging": "^0.2.0",
    "request": "^2.67.0",
    "source-map-support": "^0.4.3",
    "url-join": "^4.0.0",
    "uuid": "^3.1.0"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@artsy/express-reloadable": "^1.3.0",
    "@types/express-graphql": "^0.0.35",
    "@types/graphql": "^0.8.2",
    "@types/jest": "^21",
    "@types/lodash": "^4.14.74",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.1",
    "@types/node": "^8.0.31",
    "@types/qs": "^6.5.0",
    "@types/request": "^2.0.3",
    "babel-eslint": "^5.0.4",
    "babel-jest": "^22.4.1",
    "babel-plugin-rewire": "1.2.0-rc.1",
    "deep-equal": "^1.0.1",
    "dotenv": "^2.0.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-react": "^3.14.0",
    "expect.js": "^0.3.1",
    "husky": "^0.13.3",
    "jest": "^22.4.2",
    "lint-staged": "^3.4.0",
    "prettier": "^1.7",
    "sinon": "^1.17.2",
    "typescript": "^2.7.2",
    "typescript-babel-jest": "^1.0.5"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/helper.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/src/test/helper.js",
      "/src/test/utils.js",
      "/src/test/gql.js",
      "/src/test/__mocks__"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    },
    "moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.json, *.md": [
      "yarn prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "yarn prettier --write",
      "git add"
    ]
  }
}
