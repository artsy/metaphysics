{
  "editor.rulers": [120],
  "editor.tabSize": 2,
  "javascript.validate.enable": true,
  "search.exclude": {
    "**/node_modules": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/build": true
  },
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": false,
  "path-intellisense.mappings": {
    "/": "${workspaceRoot}",
    "lib": "${workspaceRoot}/lib",
    "schema": "${workspaceRoot}/schema",
    "test": "${workspaceRoot}/test"
  }
}
