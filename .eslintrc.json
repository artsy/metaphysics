{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "jasmine": true,
    "es6": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "camelcase": 0,
    "max-len": [2, 120],
    "quotes": [2, "double"],
    "semi": [0],
    "no-extra-semi": 0,
    "indent": 0
  },
  "ignore": ["/flow-typed/npm/*"],
  "globals": {
    "expect": false,
    "schema": false,
    "sinon": false,
    "expectPromiseRejectionToMatch": false
  }
}
