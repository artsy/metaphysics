{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "jasmine": true,
    "es6": true
  },
  "plugins": ["promise", "@typescript-eslint/eslint-plugin"],
  "extends": ["react-app", "plugin:promise/recommended"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "import/first": 0,
    "no-useless-escape": 0,
    "no-empty-pattern": 0,
    "promise/no-nesting": 0,
    "no-unused-vars": 0
  },
  "globals": {
    "expect": false,
    "schema": false,
    "sinon": false,
    "expectPromiseRejectionToMatch": false
  }
}
