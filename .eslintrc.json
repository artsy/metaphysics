{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "jasmine": true,
    "es6": true
  },
  "plugins": ["promise", "prettier"],
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "camelcase": 0,
    "max-len": [2, 120],
    "quotes": [2, "double"],
    "semi": [0],
    "no-extra-semi": 0,
    "indent": 0,
    "promise/catch-or-return": 2,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "import/first": 0,
    "no-underscore-dangle": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,
    "import/no-named-as-default-member": 0,
    "no-empty-pattern": 0,
    "global-require": 0,
    "no-mixed-operators": 0,
    "no-plusplus": 0,
    "no-restricted-globals": 0,
    "no-prototype-builtins": 0,
    "no-multi-str": 0,
    "no-bitwise": 0
  },
  "globals": {
    "expect": false,
    "schema": false,
    "sinon": false,
    "expectPromiseRejectionToMatch": false
  }
}
