{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "checkJs": false,
    "lib": ["es2019"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "useUnknownInCatchVariables": false
  },
  "include": ["index.js", "src/**/*"],
  "exclude": ["build", "node_modules", "**/node_modules/*", "dangerfile.ts"]
}
